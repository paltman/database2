# http://editorconfig.org

# helps code editors like VS Code to enforce consistent coding styles between developers and projects

root = true

[*]
indent_style = space
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_size = 4
trim_trailing_whitespace = true

[*.py]
line_length=120
multi_line_output=3
default_section=THIRDPARTY

[*.{html,css,scss,js,ts,vue,json,yml,gql}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[nginx.conf]
indent_size = 2
